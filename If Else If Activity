// Prompt the user to enter their score
let score = parseInt(prompt("Please enter your score:"));

// Input validation: Check if the input is a number and within the valid range (0-100)
if (isNaN(score) || score < 0 || score > 100) {
  console.log("Invalid input. Please enter a numerical score between 0 and 100.");
} else {
  // Assign grades using else if statements
  if (score >= 90) {
    console.log("Excellent");
  } else if (score >= 80) {
    console.log("Good");
  } else if (score >= 70) {
    console.log("Fair");
  } else {
    console.log("Needs Improvement");
  }
}
